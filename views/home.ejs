<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mukta&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/home.css">
    <script src="https://cdn.socket.io/3.1.3/socket.io.min.js"></script>
    <script src="home.js" defer></script>
    <title>CookBook</title>
</head>

<body>
    <div class="nav-bar">
        <div class="nav-logo">
            <img src="/images/logo.png" class="logo" id="logo">
        </div>
        <div class="nav-search">
            <input type="text" id="search" placeholder="    Search...">
        </div>
        <div class="user-control">
            <div class="nav-username">
                <span id="username"></span>
            </div>
            <div class="nav-friends">
                <i class="fas fa-user-friends"></i>
            </div>
            <div class="sign-out">
                <i class="fas fa-sign-out-alt" id="logout"></i>
            </div>
        </div>
    </div>

    <div class="body-contents">
        <div class="category-menu">
            <ul class="food-list">
                <li><img src="/images/chicken.png"> Chicken</li>
                <li><img src="/images/beef.png"> Beef</li>
                <li><img src="/images/beef.png"> Pork</li>
                <li><img src="/images/lamb.png"> Lamb</li>
                <li><img src="/images/fish.png"> Seafood</li>
                <li><img src="/images/vege.png"> Vegan</li>
                <li><img src="/images/dessert.png"> Dessert</li>
            </ul>
        </div>
        <div class="middle-contents">
            <div class="post">
                <form class="post-status" id="post-status">
                    <div class="post-msg">
                        <textarea class="input-msg" name="input-msg" id="input-msg" rows="1"
                            placeholder="Share your favourite recipes with others." required ></textarea>
                    </div>
                    <div class="post-btn">
                        <button class="post-btn" id="post-btn">Post</button>
                    </div>
                </form>
                <div class="feed-div">
                    <%userpost.forEach(post=> {%>
                        <div class="post-box">
                            <div class="msg-box">
                                <%= post.userpost %>
                            </div>
                            <div class="like">
                                <i class="fab fa-gratipay"> Love</i>
                                <i class="far fa-thumbs-down"> Dislike</i>
                            </div>
                        </div>
                    <% })%>
                </div>
        </div>
    </div>

    <div class="trends">
        <div class="trending">Trending
            <i class="fas fa-fire-alt"></i>
        </div>
        <% items.Trending.forEach(function(item){ %>
            <%#looping through the json file %>
                <div class="recipe" data-item-id="<%= item.id %>">
                    <%#assigning ID accordingly %>
                        <div class="food-title">
                            <%= item.name %>
                                <%#assigning item name %>
                        </div>
                        <div class="food-description">
                            <%= item.description %>
                        </div>
                </div>
        <% }) %>
    </div>
    </div>
</body>

</html>